<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Create new category" %></h3>
</div>


<div class="modal-body">

<ul class="errors1"></ul>
<%= form_for @finance_fee_category,url:{action: 'create_finance_fee_category'}, remote: true do |f|%>
 <table class="table" style="width:85%">
        <tr>
            <td class="col-2"><%= f.label :Category_Name, class: "control-label"%></td>
            <td><%=f.text_field :name ,:style =>"width: 250px", class: "form-control"%></td>
        </tr>
        
        <tr>
            <td class="col-2"><%= f.label :Description , class: "control-label"%></td>
             <td><%=f.text_field :description ,:style =>"width: 250px", class: "form-control"%></td>
        <tr>

        <tr><td class="col-2"><%= f.label :Is_this_under_income? , class: "control-label"%></td>
             <td><%= f.check_box :is_master %> 	 </td>
        <tr>


        <td colspan="2"><%= f.submit 'Create', class: "btn btn-primary"%></td>
        </tr>
    </table>
<% end %>

</div>

</div>
</div>
