<div id="content-header">
  <h1>Donations</h1>
  <h3>Edit donation</h3>
    <div id="app-back-button">
  <%= link_to image_tag("buttons/back.png",:border => 0), :back %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>


<div id="page-yield">

	<table class="table" style="width:500px" align="center">

<tbody>

	<%= form_for @finance_donation, url:{action:'update_finance_donation'} do |c|%>

		<% if @finance_donation.errors.any?%>
      	<div>
        <ul>
          <% @finance_donation.errors.full_messages.each do |msg| %>
          <li style="width:600px"><%= msg%></li>
          <% end %>
        </ul> 
      	</div>
  		<% end %>

		<tr>
			<td><%= c.label :Donar_name%></td>
			<td><%= c.text_field :donor%></td>
		</tr>

		<tr>
			<td><%= c.label :Description%></td>
			<td><%= c.text_field :description%></td>
		</tr>

		<tr>     
          <td><%=c.label :'Transaction Date'%></td>
          <td><%=c.date_field :created_at,:style=>"width:175px"%></td>
     	</tr>	
		

		<tr>
			<td><%= c.label :Amount%></td>
			<td><%= c.text_field :amount%></td>
		</tr>

	
			<td colspan="3"><%= c.submit 'Update'%></td>
		</tr>
	<%end%>

	</tbody>
</table>

 </div>
