<div id="content-header">
  <h1>Donations</h1>
  <h3>Add new donation</h3>
    <div id="app-back-button">
  <%= link_to image_tag("buttons/back.png",:border => 0), '/finance' %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'Donors', finance_showall_finance_donation_path %> </li>

  </ul>
</div>

<div id="page-yield">

	<table class="table" style="width:500px" align="center">

<tbody>

	<%= form_for @finance_donation, url:{action:'add_finance_donation'} do |c|%>

		<% if @finance_donation.errors.any?%>
      <div>
        <ul>
          <% @finance_donation.errors.full_messages.each do |msg| %>
          <li style="width:600px"><%= msg%></li>
          <% end %>
        </ul> 
      	</div>
  		<% end %>

		<tr>
			<td><%= c.label :Donar_name%></td>
			<td><%= c.text_field :donor%></td>
		</tr>

		<tr>
			<td><%= c.label :Description%></td>
			<td><%= c.text_field :description%></td>
		</tr>

		<tr>     
          <td><%=c.label :'Transaction Date' %></td>
          <td><%=c.date_field :transaction_date,:value => Time.now.strftime('%Y-%m-%d'),:style=>"width:175px"%></td>
     	</tr>
		

		<tr>
			<td><%= c.label :Amount%></td>
			<td><%= c.text_field :amount%></td>
		</tr>

	
			<td colspan="3"><%= c.submit 'Add'%></td>
		</tr>
	<%end%>

	</tbody>
</table>

 </div>
