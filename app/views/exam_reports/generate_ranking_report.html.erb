<div id="content-header">
  <h1>Exam Reports</h1>
  <h3>Student Ranking Per Subject</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), :back %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'Pdf report', '' %></li>
  </ul>
</div>

<div id="page-yield">
  <div class="box">
   <div class="bread_crumb">
    <%= link_to 'Exams',  '/exams'  %> &raquo;
    <%= link_to 'Report Center', '/exam_reports/report_center' %> &raquo;
    <%= link_to 'Student ranking per subject report', '/exam_reports/student_ranking_per_subject' %> &raquo;
    Generated report
  </div></div><br/><br/>
  <h4><%= @batch.name %> - <%= @batch.course.course_name %> - <%= @batch.course.section_name %>| <%= @subject.name %></h4>
    <div id="score-table">
    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1" class="table-bordered table-hover">
      <tr class="tr-head">
          <th><font color="blue">Sr.No.</font></th>
          <th><font color="blue">Admission No</font></th>
          <th><font color="blue">Student Name</font></th>
          <% ranks = [] %>
          <% @exam_groups.each do |exam_group| %>
            <% rank_exam = Exam.find_by_subject_id_and_exam_group_id(@subject.id,exam_group.id) %>
            <% unless rank_exam.nil? %>
              <% exam_scores = ExamScore.where(exam_id: rank_exam.id).order(marks: :desc) %>
              <% ordered_marks = exam_scores.map{|m| m.marks}%>
              <% ranks << [exam_group.id,ordered_marks] %>
            <% end %>
            <th><font color="blue"><%= exam_group.name %></font></th>
          <% end %>
        </tr>
        <% @students.each_with_index do |student,i| %>
          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td><%= i+1 %></td>
            <td><%= student.admission_no.present? ? student.admission_no : "-" %></td>
            <td ><%= student.first_name+" "+student.last_name %></td>
            <% @exam_groups.each do |exam_group| %>
              <% mark_list = [] %>
              <% ranks.each do|rank| %>
                <% if rank[0]==exam_group.id %>
                  <% mark_list = rank[1] %>
                <% end %>
              <% end %>
              <td class="col-3">
                <% exam = Exam.find_by_subject_id_and_exam_group_id(@subject.id,exam_group.id) %>
                <% exam_score = ExamScore.find_by_student_id_and_exam_id(student.id,exam.id) unless exam.nil? %>
                <% unless exam.nil? %>
                  <%= exam_score.nil? ? '-' : (exam_score.marks.nil? ? '-' : (mark_list.index(exam_score.marks) + 1)) %>
                <% else %>
                 NA
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>