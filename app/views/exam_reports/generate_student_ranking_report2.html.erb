<div id="content-header">
 <h1>Exam Reports</h1>
  <h3>Student Ranking Per Course</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), :back  %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'Pdf report', '' %></li>
  </ul>
</div>
<div id="page-yield">
  <div class="box">

  <div class="bread_crumb">
    <%= link_to 'Exams', '/exams' %> &raquo;
    <%= link_to 'Report Center', '/exam_reports/report_center' %> &raquo;
     <%= link_to 'Student Ranking Per Course', '/exam_reports/student_ranking_per_course' %> &raquo;
    Generate Report
  </div><br/><br/>
   <h4>Overall Ranking : <%= @course.course_name+" "+@course.section_name %></h4>
    <div id="score-table">
          <table id="listing" width="100%" cellpadding="1" cellspacing="1">
            <tr class="tr-head">
              <th>Sr.No.</th>
              <th>Admission no</th>
              <th>Student Name</th>  
              <th>Batch</th>       
              <th>Marks</th>
              <th>Rank</th>
            </tr>
            <% @batches.each do |batch| %>
            <% batch.students.each_with_index do |student,i| %>
          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td class="col-1"><%= i+1 %></td>
            <td class="col-3"><%= student.admission_no.present? ? student.admission_no : "-" %></td>
            <td class="col-4"><%= student.first_name+" "+student.last_name %></td>
            <td><%= batch.name %></td>
            <td>-</td>
            <td>-</td>
          </tr>
        <% end %>
        <% end %>
          </table>
    </div></div></div>