
<div id="content-header">
  <h1>Exams</h1>
  <h3>Exams Group</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0),:back %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>


<div class="box">
  <div class="bread_crumb">
    <%= link_to 'add  links pk' %> &raquo;
  </div></div><br/>
<%= form_for [@exam_group,@exam] do |f| %>
<div class="table">
<div class="row">
<div class="col-md-3">
<%= f.label :subject_id, class: "control-label " %>
</div>
<div class="col-md-9">
<%= f.select :subject_id, @subjects.collect {|s| [s.name,s.id]} %><br/>
</div>
</div>

<div class="row">
<div class="col-md-3" style="margin-top:20px">
<%= f.label :start_time , class: "control-label"%>
</div>
<div class="col-md-9">
<%=f.date_field :start_time ,:style =>"width: 250px", class: "form-control"%>
</div>
</div>

<div class="row">
<div class="col-md-3" style="margin-top:20px">
<%= f.label :end_time , class: "control-label"%>
</div>
<div class="col-md-9">
<%=f.date_field :end_time ,:style =>"width: 250px", class: "form-control"%>
</div>
</div>

<div class="row">
<div class="col-md-3" style="margin-top:20px">
<%= f.label :maximum_marks , class: "control-label"%>
</div>
<div class="col-md-9">
<%=f.text_field :maximum_marks ,:style =>"width: 250px", class: "form-control"%>
  </div>
  </div>
<div class="row">
<div class="col-md-3" style="margin-top:20px">
<%= f.label :minimum_marks , class: "control-label"%>
</div>
<div class="col-md-9">
<%=f.text_field :minimum_marks ,:style =>"width: 250px", class: "form-control"%>
</div>
</div>
<%= f.submit ' create', class: "btn btn-primary" %>
</div>
<% end%>