<div id="content-header">
  <h1>Exams</h1>
  <h3>Exams Scores</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0),:back %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div id="page-yield">
<div class="box">		
<% if @students.empty? %>
 <h4 align="center">No students Found </h4>
<% else %>

<%=form_for @exam do |f| %>  
<table class="table table-hover" style="width:700px">
  <tr>
    <td class="col-3" colspan="3">Exam Name: <%= @exam.exam_group.name %></td>
  </tr>
        
  <tr>
    <td class="col-3" colspan="3">Subject Name: <%= @exam.subject.name %></td>
  </tr>
  <tr class="tr-head">
    <td class="col-2">Student name</td>
    <td >Marks</td>
    <td >Remarks</td>
  </tr> 
<% @students.each do |student| %>
<%= f.fields_for :exam_scores do |es| %>
    <tr>
      <td class="col-2"><%= student.first_name+" "+student.last_name %></td>
      <%= es.hidden_field :student_id, value: student.id%>
      <td><%= es.text_field :marks%></td>
      <td><%= es.text_field :remarks%></td>
    </tr>
<%end%>
<% end %>

 <tr class="tr-head"><td colspan="3">
<%= f.submit 'create', class: "btn btn-primary" %></td></tr>
</table>
<% end %>
<%end%>
</div></div>