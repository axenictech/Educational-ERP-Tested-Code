<% unless flash[:notice1].nil? %> <p class="flash-msg"> <%= flash[:notice1] %> </p><% end %>

<div align="center">
<ul class="errors1"></ul></div>
<table class="table" style="width:500px" align="center">

<tbody>

	<%= form_for @employee_category_new, url:{action:'add_category'},remote:true do |c|%>
		<tr>
			<td><%= c.label :Name%></td>
			<td><%= c.text_field :name%></td>
		</tr>

		<tr>
			<td><%= c.label :prefix%></td>
			<td><%= c.text_field :prefix%></td>
			</tr>

		<tr>
			<td><%= c.label :Status%> </td>
			<td><%= c.radio_button "status", "true", checked: "checked" %> <%=c.label :Active%> 
			<%= c.radio_button "status", "false"%> <%=c.label :Inactive%></td>
		</tr>
		<tr>
			<td colspan="3"><%= c.submit 'Create'%></td>
		</tr>
	<%end%>

	</tbody>
</table>


<% if @categories1.empty? and @categories2.empty?%>
<h3 align="center">No records</h3>
<%else%>
<table align="center" class="table table-hover table-bordered" style="width:800px">

	<tr class="tr-head"><th colspan="3">Active category</th>
    </tr>
	<tbody class="product-index">

	<%@categories1.each do |c| %>
			<tr>
			<td class="col-3"><%=c.name%> (<%=c.prefix%>)</td>
			<td><%= link_to 'edit', employees_edit_category_path(c),remote:true%></td>
			<td><%= link_to 'delete' ,employees_destroy_category_path(c),remote:true,method: :delete, data: { confirm: "Are you sure to delete"}%></td>	 
			</tr>
		<%end%>

		
	 </tbody>
</table>

<table align="center" class="table table-hover table-bordered" style="width:800px">

	<tr class="tr-head"><th colspan="3">Inactive category</th>
    </tr>
	<tbody class="product-index">

	<%@categories2.each do |c| %>
			<tr>
			<td class="col-3"><%=c.name%> (<%=c.prefix%>)</td>
			<td><%= link_to 'edit', employees_edit_category_path(c),remote:true%></td>
			<td><%= link_to 'delete' ,employees_destroy_category_path(c),remote:true,method: :delete, data: { confirm: "Are you sure to delete"}%></td>	 
			</tr>
		<%end%>

		
	 </tbody>
</table>
<%end%>

 
