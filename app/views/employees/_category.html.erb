<% if @categories1.empty? or @categories2.empty? %>
<h4 align="center">No Record Found </h4>
   <% else %>
<table align="center" class="table table-hover table-bordered" style="width:800px">

	<tr class="tr-head"><th colspan="3">Active category</th>
    </tr>
	<tbody>
		<%@categories1.each do |c| %>
			<tr>
			<td class="col-3"><%=c.name%> (<%=c.prefix%>)</td>
			<td><%= link_to 'edit', employees_edit_category_path(c),remote:true%></td>
			<td><%= link_to 'delete' ,''%></td>	 
			</tr>
		<%end%>
	 </tbody>
</table>
 
<table align="center" class="table table-hover table-bordered" style="width:800px">

	<tr class="tr-head"><th colspan="3">Inactive category</th>
    </tr>
	<tbody>
		<%@categories2.each do |c| %>
			<tr>
			<td class="col-3"><%=c.name%> (<%=c.prefix%>)</td>
			<td><%= link_to 'edit', employees_edit_category_path(c),remote:true%></td>
			<td><%= link_to 'delete' ,''%></td>	
			</tr>
		<%end%>
	 </tbody>
</table>
<%end%>
