
<div id="content-header">
  <h1>Employee Settings</h1>
  <h3>Employee Department</h3>
</div>

<div id="page-yield">
<div align="center">

	<%= form_for @employee_department, url:{action:'add_department'},remote:true do |c|%>

		<div><%= c.label :Name%>
		<%= c.text_field :name%></div>
		<div><%= c.label :code%>
		<%= c.text_field :code%></div>
		<div><%= c.label :Status%> <%= c.radio_button "status", "active", checked: true %> <%=c.label :Active%> 
		<%= c.radio_button "status", "inactive"%> <%=c.label :Inactive%>
		</div>

		<div>
			<%= c.submit 'Create'%>
		</div>
	<%end%>


</div>
<div id="add_department">
<%=render 'department'%>

</div>
<div id="myModal" class="modal fade">
 </div>
 
</div>


<script type="text/javascript">
 $(document).ready(function() {
setTimeout("Refresh()", 10000); 
});

</script>

