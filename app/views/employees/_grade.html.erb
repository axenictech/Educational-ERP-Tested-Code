<table align="center" class="table table-hover table-bordered" style="width:800px">

	<tr class="tr-head"><th colspan="3">Active category</th>
    </tr>
	<tbody>
		<%@grade1.each do |c| %>
			<tr>
			<td class="col-3"><%=c.name%> (<%=c.priority%>)</td>
			 <td><%= link_to 'edit',employees_edit_grade_path(c),remote:true%></td>
			 <td><%= link_to 'delete',employees_destroy_grade_path(c),remote:true,method: :delete ,data: {confirm:"Are you sure to delete"}%></td>
			</tr>
		<%end%>
	 </tbody>
</table>
 
