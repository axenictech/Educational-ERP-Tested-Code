<div id="content-header">
  <h1>News</h1>
  <h3>Read news</h3>
  <div id="app-back-button">
  <%= link_to image_tag("buttons/back.png",:border => 0), "" %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>


<div id="page-yield">
<div id="box">
  <% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>
<div id="content_wrapper">
<div class="bread_crumb">
<%= link_to 'Home', home_dashboard_path %> &raquo;
        <%= link_to 'News', newscasts_path %> &raquo;
        <%= link_to @newscast.title, newscast_path %> &raquo;
        <%= 'edit'%>
        </div></div></div>
  <%= form_for @newscast do |f|%>

  <% if @newscast.errors.any?%>
      <div class ="errorExplanation" id="error_explanation">
        <ul>
          <% @newscast.errors.full_messages.each do |msg| %>
          <li><%= msg%></li>
          <% end %>
        </ul> 
      </div>
  <% end %>

    <div id="add_news_form">
      <div class="news_label_field">
        <%=f.label :Title %>
        <div id="news_title_text_field_bg"><%= f.text_field :title%></div>
      </div>

      <div class="news_label_field">
        <%=f.label :Content %>
        <div id="news_content_text_field_bg"><%= f.text_area :content, :cols => "46", :rows => "10"%>
        </div>
      </div>
    </div>

  <div align="center">  <%= f.submit :'Update', class: "btn btn-success"%></div> 
  <% end %>
</div>
</div>
