<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Attendance for " %><span><%= @student.first_name%></span></h3>
</div>
<div class="modal-body">
<%= form_for @attendence,url:{action:'create',student_id:@student.id,month_date:@date},remote:true  do |c|%>

 
  <table class="table" style="width:500px" align="center">
    
    <tr>
      <td><%= c.label :Reason_for_absence%></td>
      <td><%= c.text_field :reason%></td>
    </tr>
        
    <tr>
      <td colspan="2"><%= c.submit 'Add', class: "btn btn-primary"%>
      </td>
    </tr>

</table>
<% end %>

</div>
</div>
</div>
