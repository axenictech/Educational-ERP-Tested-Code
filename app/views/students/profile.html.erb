<div id="content-header">
  <h1>Student info</h1>
  <h3>Student profile</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "" %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="inner-tab-menu">
  <ul>
      <li><%= link_to 'Reports', students_report_path%></li>
      <li><%= link_to "Guardians", students_dispguardian_path(@student)%></li>
      <li><%= link_to "Send email",students_email_path(@student) %></li>
     <li><%= link_to "Delete", students_remove_path(@student)%></li>
  </ul>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

<table class="table table-hover" align="center" style="width:900px">
<thead style="background-color:white">
<tr>
    <th colspan="4"><div id="profile_picture_display">
    <% unless @student.photo_data.blank? %>
      <%= image_tag @student.image.url(:medium) %>
      <% else %>
          <%= image_tag "master_student/profile/default_student.png" %>
      <% end %>
    </div>
   <div id ="student_main_info">
      <h3 align="left"> <%= @student.first_name %> <%= @student.middle_name %> <%= @student.last_name %>  </h3>
      <h4 align="left"> Course : <%= @student.batch.course.course_name %> </h4>
      <h4 align="left"> Batch : <%= @student.batch.name %> </h4>
      <h4 align="left"> Adm no. : <%= @student.admission_no %> </h4></div>
   </th>
  </tr>
</thead>
<tbody>
<tr><td colspan="4" style="background-color:white"></td></tr>
<tr>
    <td class="col-2">Admission Date </td><td class="col-2"><%= @student.admission_date %></td>
    <td colspan="2"></td>
</tr>
<tr>
    <td class="col-2">Date of birth</td><td class="col-2"><%= @student.date_of_birth%></td>
    <td colspan="2"></td>
</tr>
<tr>
    <td class="col-2">Blood group</td><td class="col-2"><%= @student.blood_group %></td>
    <td colspan="2"></td>
</tr>
<tr>
    <td class="col-2">Gender</td><td class="col-2"><%= @student.gender %></td>
    <td class="col-2">Nationality</td><td class="col-2"><%= @student.nationality.name %></td>
</tr>
<tr>
    <td class="col-2">Language</td><td class="col-2"> <%= @student.language %> </td>
    <td class="col-2">Category</td><td class="col-2"> <%= @student.category.name %> </td>
</tr>
<tr>
    <td class="col-2">Religion</td><td class="col-2"> <%= @student.religion %> </td>
    <td class="col-2">Address</td><td class="col-2"> <%= @student.address_line1+" "+@student.address_line2 %> </td>
</tr>
<tr>
    <td class="col-2">City</td><td class="col-2"><%= @student.city %> </td>
    <td class="col-2">State</td><td class="col-2"> <%= @student.state %> </td>
</tr>
<tr>
    <td class="col-2">Country</td><td class="col-2"> <%= @student.country.name %> </td>
    <td class="col-2">Phone</td><td class="col-2">  <%= @student.phone1 %>  </td>
</tr>
<tr>
    <td class="col-2">Mobile</td><td class="col-2"><%= @student.phone2 %> </td>
    <td class="col-2">Email</td><td class="col-2"> <%= @student.email %> </td>
</tr>
<tr style="background-color:white">
<td colspan="4"><%= link_to 'Edit',edit_student_path(@student),class: "btn btn-primary" %>
<%= link_to 'PDF Report',students_profile_pdf_path(@student),class: "btn btn-success" %></td>
</tr>
</tbody></table>
</div>