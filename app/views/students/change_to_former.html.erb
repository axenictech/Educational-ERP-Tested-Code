<div id="content-header">
  <h1>Students</h1>
  <h3>Leaving school</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "" %>
  </div>
   <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="page-yield">

  <div id="student-details">
    <h3><%= @student.first_name+" "+@student.last_name %></h3>
    <h4>Adm no : <%= @student.admission_no %></h4>
    <h4>Class : <%= @student.batch.course.course_name %></h4>
  </div>

  <div class="extender"> </div>

  <div id="remove-student">
    <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
    <p>For students leaving the school, use this option to remove them from the list of active students and place them in the former students list.</p>
    </div>
    </div><br><br><br><br><br>

<%= form_for @archived_student,url:{action: 'archived_student_create',format: @student.id} do |f| %>
   <div><%=f.label :reason_for_leaving %>
        <%=f.text_field :status_description %>
        <%=f.hidden_field :student_id, :value=> @student.id%>
        <%=f.hidden_field :admission_no, :value=> @student.admission_no%>
        <%=f.hidden_field :admission_date ,:value=> @student.admission_date%>
        <%=f.hidden_field :first_name,:value=> @student.first_name%>
        <%=f.hidden_field :middle_name,:value=> @student.middle_name%>
        <%=f.hidden_field :last_name,:value=> @student.last_name%>
        <%=f.hidden_field :batch_id,:value=> @student.batch_id%>
        <%=f.hidden_field :date_of_birth,:value=> @student.date_of_birth%>
        <%=f.hidden_field :blood_group, :value=> @student.blood_group%>
        <%=f.hidden_field :birth_place,:value=> @student.birth_place%>
        <%=f.hidden_field :nationality_id,:value=> @student.nationality_id%>
        <%=f.hidden_field :language,:value=> @student.language%>
        <%=f.hidden_field :category_id, :value=> @student.category_id%>
        <%=f.hidden_field :religion,:value=> @student.religion %>
        <%=f.hidden_field :address_line1,:value=> @student.address_line1%>
        <%=f.hidden_field :address_line2,:value=> @student.address_line2%>
        <%=f.hidden_field :city,:value=> @student.city%>
        <%=f.hidden_field :state,:value=> @student.state%>
        <%=f.hidden_field :pin_code,:value=> @student.pin_code%>
        <%=f.hidden_field :country_id,:value=> @student.country_id%>
        <%=f.hidden_field :phone1,:value=> @student.phone1%>
        <%=f.hidden_field :phone2,:value=> @student.phone2%>
        <%=f.hidden_field :email,:value=> @student.email%>
        <%= f.hidden_field :photo_data,:value=> @student.photo_data%>
        <%=f.submit "Remove",class: "btn btn-danger" %></div>

<%end%>