<div id="content-header">
   <h1>Courses</h1>
  <h3>Manage Batches</h3>
  <div id="app-back-button">
  <%= link_to image_tag("buttons/back.png",:border => 0), :back  %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="inner-tab-menu">
  <ul>
    
    <li style="width:150px"><%= link_to 'Grading system', grading_levels_path %></li>
    <li style="width:150px"><%= link_to 'Batch transfer', batch_transfers_path %></li>
  </ul>
</div>
<div id="page-yield">
    <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
<div class="box">
   <div class="text-input-bg">
	
		<%= form_for :course, url:{action:'select'},method: :get,remote:true,html:{id: "course_form"} do |f| %>
				
		<%= f.label :select_course%>
		<%= f.select :id, @courses.collect {|c| [c.course_name,c.id]},
              {prompt:true},{onchange:"$('#course_form').submit();"}%>
		<% end %>
	</div>
			
</div>

<div id="batch_div"></div>
			
</div>
		